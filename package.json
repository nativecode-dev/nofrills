{
  "name": "nofrills",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "build": "lerna run build",
    "prebuild": "yarn run lint",
    "bootstrap": "npm install && lerna bootstrap",
    "clean": "rimraf .artifacts && rimraf .cache && rimraf docs && lerna run clean",
    "docs": "typedoc --mode modules --out ./doc ./packages/*/src/",
    "lint": "tslint --project tsconfig.json --config tslint.json",
    "test": "cross-env DEBUG= nyc mocha --opts mocha.opts",
    "pretest": "yarn run bootstrap && yarn run build",
    "push": "sh ./scripts/push.sh",
    "prepush": "yarn run test",
    "start": "lerna run start",
    "do": "lerna",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "travis-coveralls": "cross-env DEBUG= nyc report --reporter=text-lcov | coveralls",
    "travis-ssh": "set-up-ssh --key \"$encrypted_fa989ae4fdf1_key\" --iv \"$encrypted_fa989ae4fdf1_iv\" --path-encrypted-key \"deploy.enc\""
  },
  "devDependencies": {
    "@alrra/travis-scripts": "^3.0.1",
    "@types/chai-as-promised": "^7.1.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.1",
    "lerna": "^3.0.3",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^7.0.0",
    "tslint-no-unused-expression-chai": "^0.1.3",
    "typedoc": "^0.11.1",
    "typescript": "^3.0.1"
  },
  "nyc": {
    "all": true,
    "exclude": [
      "node_modules",
      "packages/*/src/**/*.spec.ts",
      "packages/*/src/Logger.ts",
      "packages/*/src/Logging.ts"
    ],
    "extension": [
      ".ts"
    ],
    "include": [
      "packages/*/src/**/*.ts"
    ],
    "instrument": true,
    "report-dir": ".cache/coverage",
    "reporter": "text",
    "sourceMap": true,
    "temp-directory": ".cache/nyc"
  },
  "workspaces": [
    "packages/*",
    "typings/*"
  ]
}
