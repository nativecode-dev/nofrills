{
  "name": "nofrills",
  "private": true,
  "version": "0.0.0",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "devDependencies": {
    "@nofrills/tasks": "^7.1.12",
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.6.9",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "commitizen": "^4.0.3",
    "coveralls": "^3.0.5",
    "cross-env": "^5.2.0",
    "cz-lerna-changelog": "^2.0.2",
    "lerna": "^3.16.4",
    "mocha": "^6.2.0",
    "npm-check": "^5.9.0",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "source-map-support": "^0.5.13",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "typescript": "^3.5.3"
  },
  "nyc": {
    "all": true,
    "exclude": [
      "node_modules",
      "**/src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "include": [
      "core/*/src/**/*.ts",
      "packages/*/src/**/*.ts"
    ],
    "instrument": true,
    "report-dir": ".cache/coverage",
    "reporter": "text",
    "sourceMap": true,
    "temp-directory": ".cache/nyc"
  },
  "scripts": {
    "lerna": "lerna",
    "bootstrap": "lerna bootstrap",
    "build": "cli-tasks build",
    "build:ci": "cli-tasks build:ci",
    "commit": "cli-tasks commit",
    "release": "cli-tasks release",
    "release:canary": "cli-tasks release:canary",
    "release:pre": "cli-tasks release:pre",
    "setup:git": "cli-tasks setup-git",
    "setup:ssh": "cli-tasks setup-ssh",
    "start": "cli-tasks start",
    "test": "cli-tasks test",
    "test:ci": "cli-tasks test:ci",
    "upgrade": "cli-tasks upgrade"
  }
}
