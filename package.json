{
  "name": "nofrills",
  "private": true,
  "version": "0.0.0",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "devDependencies": {
    "@alrra/travis-scripts": "^3.0.1",
    "@nofrills/tasks": "^6.2.0",
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "*",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "commitizen": "^3.1.1",
    "coveralls": "^3.0.4",
    "cross-env": "^5.2.0",
    "cz-lerna-changelog": "^2.0.2",
    "lerna": "^3.15.0",
    "lerna-update-wizard": "^0.14.0",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "source-map-support": "^0.5.12",
    "ts-node": "^8.2.0",
    "tslint": "^5.17.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.2"
  },
  "nyc": {
    "all": true,
    "exclude": [
      "node_modules",
      "packages/*/src/**/*.spec.ts",
      "packages/*/src/Logger.ts",
      "packages/*/src/Logging.ts",
      "packages/*/src/cli-*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "include": [
      "core/*/src/**/*.ts",
      "packages/*/src/**/*.ts",
      "packages-typings/*/src/**/*.ts"
    ],
    "instrument": true,
    "report-dir": ".cache/coverage",
    "reporter": "text",
    "sourceMap": true,
    "temp-directory": ".cache/nyc"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "prebootstrap": "npm install",
    "build": "lerna run build",
    "commit": "git add -A . && npx git cz",
    "ssh": "set-up-ssh --key \"$encrypted_fa989ae4fdf1_key\" --iv \"$encrypted_fa989ae4fdf1_iv\" --path-encrypted-key \"deploy.enc\"",
    "start": "cli-tasks start",
    "test": "lerna run test",
    "upgrade": "lerna run upgrade"
  }
}
