{
	"name": "nofrills",
	"private": true,
	"version": "0.0.0",
	"devDependencies": {
		"coveralls": "^3.0.0",
		"cross-env": "^5.1.1",
		"lerna": "^2.5.1",
		"mocha": "^4.0.1",
		"nyc": "^11.3.0",
		"rimraf": "^2.6.2",
		"ts-node": "^3.3.0",
		"typescript": "^2.6.1"
	},
	"nyc": {
		"all": true,
		"exclude": [
			"node_modules",
			"packages/*/src/**/*.spec.ts"
		],
		"extension": [
			".ts"
		],
		"include": [
			"packages/*/src/**/*.ts"
		],
		"instrument": true,
		"report-dir": ".cache/coverage",
		"reporter": "text",
		"sourceMap": true,
		"temp-directory": ".cache/nyc"
	},
	"scripts": {
		"build": "lerna run build",
		"prebuild": "yarn run clean && lerna bootstrap",
		"clean": "rimraf .cache && lerna run clean",
		"test": "cross-env DEBUG= nyc mocha --opts mocha.opts",
		"pretest": "yarn run build",
		"testonly": "cross-env DEBUG= nyc mocha --opts mocha.opts",
		"testonlyall": "lerna run testonly",
		"coveralls": "nyc report --reporter=text-lcov | coveralls"
	},
	"workspaces": [
		"packages/*"
	]
}
