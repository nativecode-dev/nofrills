{
  "command": {
    "run": {
      "stream": false
    },
    "publish": {
      "allowBranch": [
        "develop",
        "master",
        "feature/"
      ],
      "conventionalCommits": true,
      "ignoreChanges": [
        "*.md",
        "LICENSE"
      ],
      "loglevel": "verbose",
      "message": "chore(release): publish",
      "yes": true
    },
    "version": {
      "allowBranch": [
        "develop",
        "master",
        "feature/"
      ],
      "conventionalCommits": true,
      "ignoreChanges": [
        "*.md",
        "LICENSE"
      ],
      "loglevel": "verbose",
      "message": "chore(release): publish",
      "yes": true
    }
  },
  "loglevel": "error",
  "packages": [
    "core/*",
    "packages/*"
  ],
  "version": "independent"
}
