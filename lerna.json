{
  "command": {
    "run": {
      "stream": true
    },
    "publish": {
      "allowBranch": [
        "develop",
        "master",
        "feature/"
      ],
      "conventionalCommits": true,
      "ignoreChanges": [
        ".ci-env",
        ".editorconfig",
        ".attributes",
        ".gitignore",
        ".gitlab-ci.yml",
        ".gitmodules",
        ".npmignore",
        ".prettierrc",
        "cli-tasks",
        "lerna",
        "mocha.opts",
        "nofrills.png",
        "package-lock.json",
        "tasks.json",
        "tsconfig.json",
        "tsconfig.settings.json",
        "tslint.json",
        "*.md",
        "LICENSE",
        "lib/"
      ],
      "loglevel": "verbose",
      "message": "[skip ci]: publish",
      "yes": true
    },
    "version": {
      "allowBranch": [
        "develop",
        "master",
        "feature/"
      ],
      "conventionalCommits": true,
      "ignoreChanges": [
        ".ci-env",
        ".editorconfig",
        ".attributes",
        ".gitignore",
        ".gitlab-ci.yml",
        ".gitmodules",
        ".npmignore",
        ".prettierrc",
        "cli-tasks",
        "lerna",
        "mocha.opts",
        "nofrills.png",
        "package-lock.json",
        "tasks.json",
        "tsconfig.json",
        "tsconfig.settings.json",
        "tslint.json",
        "*.md",
        "LICENSE",
        "lib/"
      ],
      "loglevel": "verbose",
      "message": "[skip ci]: publish",
      "yes": true
    }
  },
  "loglevel": "error",
  "npmClientArgs": [
    "--no-progress",
    "--silent"
  ],
  "packages": [
    "core/*",
    "packages/*"
  ],
  "version": "independent"
}
