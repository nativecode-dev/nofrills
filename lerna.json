{
  "command": {
    "exec": {
      "bail": true
    },
    "publish": {
      "allowBranch": [
        "master"
      ],
      "ignoreChanges": [
        "*.md",
        "LICENSE"
      ],
      "npmClient": "npm",
      "npmClientArgs": [
        "--quiet"
      ],
      "skipGit": false,
      "yes": true
    },
    "run": {
      "stream": true
    }
  },
  "lerna": "2.11.0",
  "loglevel": "error",
  "npmClient": "yarn",
  "npmClientArgs": [
    "--silent"
  ],
  "packages": [
    "core/*",
    "packages/*",
    "packages-cli/*",
    "packages-typings/*"
  ],
  "sort": true,
  "useWorkspaces": true,
  "version": "independent"
}
