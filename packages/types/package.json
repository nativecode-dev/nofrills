{
  "author": "support@nativecode.com",
  "description": "Library for runtime type helpers.",
  "homepage": "https://github.com/nativecode-dev/nofrills-types#readme",
  "license": "MIT",
  "main": "./lib/index.js",
  "name": "@nofrills/types",
  "types": "./lib/index.d.ts",
  "version": "0.9.0",
  "bugs": {
    "url": "https://github.com/nativecode-dev/nofrills-types/issues"
  },
  "dependencies": {
    "validator": "^7.2.0",
    "zipcodes-regex": "^1.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.0.1",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.10",
    "@types/validator": "^6.2.1",
    "chai": "^4.0.2",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.1",
    "mocha": "^3.4.2",
    "nyc": "^11.0.3",
    "rimraf": "^2.6.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.5.0",
    "typescript": "^2.4.1"
  },
  "nyc": {
    "all": true,
    "exclude": [
      "src/**/*.spec.ts",
      "src/**/index.ts"
    ],
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "instrument": true,
    "sourceMap": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nativecode-dev/nofrills-types.git"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "prebuild": "rimraf lib/",
    "postbuild": "yarn run lint",
    "lint": "tslint src/",
    "test": "cross-env DEBUG= nyc mocha --opts mocha.opts",
    "pretest": "yarn run build",
    "testonly": "cross-env DEBUG= nyc mocha --opts mocha.opts",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "push": "yarn publish --access public",
    "prepush": "yarn run test",
    "clean": "rimraf .nyc_output && rimraf coverage && rimraf lib"
  }
}
