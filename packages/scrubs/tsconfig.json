{
  "compilerOptions": {
    "declaration": true,
    "diagnostics": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "pretty": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@nofrills/lincoln/lib"
    ]
  },
  "exclude": [
    "node_modules/**/*",
    "tests/**/*.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
