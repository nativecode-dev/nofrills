{
  "author": "support@nativecode.com",
  "description": "Provides a slim abstraction for logging.",
  "homepage": "https://github.com/nativecode-dev/nofrills-lincoln#readme",
  "license": "MIT",
  "main": "./lib/index.js",
  "name": "@nofrills/lincoln",
  "types": "./lib/index.d.ts",
  "version": "0.10.2",
  "bugs": {
    "url": "https://github.com/nativecode-dev/nofrills-lincoln/issues"
  },
  "dependencies": {
    "@nofrills/collections": "^0.10.1",
    "uuidjs": "^3.5.3"
  },
  "devDependencies": {
    "@types/chai": "^4.0.1",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.2",
    "@types/uuidjs": "^3.3.1",
    "chai": "^4.0.2",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.1",
    "mocha": "^3.4.2",
    "nyc": "^11.0.3",
    "rimraf": "^2.6.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.4.3",
    "typescript": "^2.3.4"
  },
  "nyc": {
    "all": true,
    "exclude": [
      "src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "instrument": true,
		"report-dir": ".cache/coverage",
		"reporter": "text",
		"sourceMap": true,
		"temp-directory": ".cache/nyc"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nativecode-dev/nofrills-lincoln"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "prebuild": "rimraf lib/",
    "postbuild": "yarn run lint",
    "lint": "tslint src/",
    "test": "cross-env DEBUG= nyc mocha --opts mocha.opts",
    "pretest": "yarn run build",
    "testonly": "cross-env DEBUG= nyc mocha --opts mocha.opts",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "push": "npm publish --access public",
    "prepush": "yarn run test",
    "clean": "rimraf .nyc_output && rimraf coverage && rimraf lib"
  }
}
