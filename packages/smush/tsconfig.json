{
  "compilerOptions": {
    "declaration": true,
    "diagnostics": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "lib",
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2015"
  },
  "exclude": [
    "node_modules/**/*",
    "tests/**/*.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]

}
