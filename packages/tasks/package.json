{
  "author": "opensource@nativecode.com",
  "description": "Simple NPM package task builder.",
  "homepage": "https://github.com/nativecode-dev/nofrills/tree/master/packages/tasks/#readme",
  "license": "MIT",
  "main": "./src/index.ts",
  "name": "@nofrills/tasks",
  "private": false,
  "types": "./bin/index.d.ts",
  "version": "3.1.3",
  "bin": {
    "cli-shabang": "./bin/cli-shabang.js",
    "cli-tasks": "./bin/cli-tasks.js"
  },
  "bugs": {
    "url": "https://github.com/nativecode-dev/nofrills/issues"
  },
  "dependencies": {
    "@nofrills/console": "^3.3.2",
    "@nofrills/fs": "^3.4.2",
    "@nofrills/lincoln-debug": "^3.3.1",
    "@nofrills/types": "^3.3.3"
  },
  "devDependencies": {
    "@types/node": "*",
    "ts-node": "^7.0.0"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nativecode-dev/nofrills"
  },
  "scripts": {
    "build": "ts-node ./src/cli-tasks.ts build",
    "clean": "ts-node ./src/cli-tasks.ts clean"
  },
  "tasks": {
    "build": [
      "[clean]",
      "tsc --project tsconfig.build.json",
      "ts-node ./src/cli-shabang.ts"
    ],
    "clean": [
      "rimraf bin"
    ]
  }
}
