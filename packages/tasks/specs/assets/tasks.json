{
  "tasks": {
    "build": [
      "[clean]",
      {
        "arguments": [
          "--project",
          "tsconfig.json"
        ],
        "command": "tsc",
        "name": "tsc"
      },
      "cp somefile somefile-other"
    ],
    "clean": {
      "entries": [
        "rimraf bin",
        "rimraf dist",
        "rimraf lib"
      ]
    },
    "test": [
      "[build]",
      {
        "arguments": [
          "tests",
          "--reporter=html"
        ],
        "command": "run",
        "name": "run"
      }
    ]
  }
}
