{
  "tasks": {
    "build": [
      "[clean]",
      "#[format]",
      "[lint]",
      "lerna run build"
    ],
    "clean": [
      "rimraf .cache"
    ],
    "configure": [
      "[configure:git]",
      "[configure:ssh]"
    ],
    "configure:docs": [
      "typedoc --mode modules --out ./docs ./packages/*/src/"
    ],
    "configure:git": [
      ".citools/setup-git ${CI_COMMIT_REF_NAME} git@git.nativecode.net:nativecode/nofrills.git automaton@nativecode.com",
    ],
    "configure:ssh": [
      ".citools/setup-ssh git.nativecode.net"
    ],
    "commit": [
      "[test]",
      "git add -A .",
      "git-cz"
    ],
    "coverage": [
      "[test]",
      "cross-env DEBUG= nyc report --reporter=text-lcov | coveralls"
    ],
    "format": [
      "prettier --loglevel silent --write \"**/specs/**/*.ts\"",
      "prettier --loglevel silent --write \"**/src/**/*.ts\""
    ],
    "lint": [
      "tslint --project tsconfig.json --config tslint.json"
    ],
    "prerelease": [
      ".citools/lerna-publis prerelease"
    ],
    "release": [
      ".citools/lerna-publis release"
    ],
    "release-canary": [
      ".citools/lerna-publis canary"
    ],
    "start": [
      "[build]",
      "lerna run start"
    ],
    "test": [
      "[build]",
      "cross-env DEBUG= nyc mocha --opts mocha.opts"
    ],
    "upgrade": [
      "npm-check-updates --upgrade"
    ]
  }
}
